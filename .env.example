# Core Configuration
NODE_ENV=development
FRONTEND_URL=http://localhost:5000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/habibistay

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
SESSION_SECRET=your-session-secret-key-for-express-sessions

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@habibistay.com

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Security & Performance Settings
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CACHE_TTL_SECONDS=600
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=info

# Replit Configuration (auto-generated in Replit environment)
REPL_ID=auto-generated
REPLIT_DOMAINS=auto-generated
ISSUER_URL=https://replit.com/oidc